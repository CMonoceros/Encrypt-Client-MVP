<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sl_menu_file_type_item"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="#6959CD">

        <ImageView
            android:id="@+id/iv_menu_file_type_encrypt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:src="@drawable/ic_encrypt_black_48dp" />

        <TextView
            android:id="@+id/tv_menu_file_type_encrypt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_menu_file_type_encrypt"
            android:paddingLeft="10dp"
            android:text="Encrypt this File?"
            android:textColor="#000"
            android:textSize="20sp" />

        <Button
            android:id="@+id/b_menu_file_type_encrypt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:background="#fff"
            android:padding="5dp"
            android:text="Yes,Encrypt!"
            android:textColor="#000" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:background="#999999">

        <ImageView
            android:id="@+id/iv_menu_file_type_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/ic_file_download_black_48dp" />

        <Button
            android:id="@+id/b_menu_file_type_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_menu_file_type_download"
            android:background="#fff"
            android:padding="5dp"
            android:text="Download!"
            android:textColor="#000" />

        <Button
            android:id="@+id/b_menu_file_type_decrypt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:background="#fff"
            android:padding="10dp"
            android:text="Decrypt!"
            android:textColor="#000" />

        <ImageView
            android:id="@+id/iv_menu_file_type_decrypt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/b_menu_file_type_decrypt"
            android:paddingRight="10dp"
            android:src="@drawable/ic_decrypt_black_48dp" />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/iv_menu_file_type"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_type_main" />

        <TextView
            android:id="@+id/tv_ll_menu_file_type_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="24dp"
            android:paddingTop="19dp"
            android:text="Base"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <ImageView
            android:id="@+id/iv_menu_file_type_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:src="@drawable/ic_details_black_48dp" />

    </RelativeLayout>


</com.daimajia.swipe.SwipeLayout>